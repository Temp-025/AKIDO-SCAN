@{
    await Html.RenderPartialAsync("_AlertBox");
}
<div class="classshide">
    <div id='viewer'></div>
</div>
<label class="sub-label">View Verify Credential</label>
<div class="row" id="spacingCss">

    <div class="col-md-12 plr">
        <div class="card-custom">
            <div class="card-body" style="padding-left:20px !important;">
                <form enctype="multipart/form-data" asp-action="CreateData">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input asp-for="id" class="form-control" hidden />

                            <div class="form-group">
                                <label asp-for="credentialName" class="col-form-label s3">Credential Name</label>
                                <input asp-for="credentialName" class="form-control" readonly />

                                <span asp-validation-for="credentialName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="organizationName" class="col-form-label s3">Organization Name</label>
                                <input asp-for="organizationName" class="form-control" rows="1" readonly />
                                <span asp-validation-for="organizationName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="status" class="col-form-label s3">Status</label>
                                <input asp-for="status" class="form-control" rows="1" readonly />
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="createdDate" class="col-form-label s3">CreatedDate</label>
                                <input asp-for="createdDate" class="form-control" readonly />
                                <span asp-validation-for="createdDate" class="text-danger"></span>
                            </div>


                        </div>
                        <div class="form-group col-md-6" style="float:left;">
                            <label asp-for="attributes" class="col-form-label s3">Selected Verifier Emails</label>
                            <div class="scroll-wrapper">
                                <!-- Fixed Heading -->
                                <div class="scroll-header">
                                    Emails
                                </div>

                                <!-- Scrollable Table -->
                                <div class="scroll-body">
                                    <table class="table-hover" id="selected-emails">
                                        <tbody>
                                            @foreach (var email in Model.emails)
                                            {
                                                <tr>
                                                    <td>@email</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>


                        <div class="form-group col-md-12">
                            <label asp-for="attributes" class="col-form-label s3" style="margin-left: 15px;">Attributes</label>
                            <div class="scroll-wrapper" style="margin-left: 15px;height:222px;">

                                <!-- Scrollable Table -->
                                <div class="scroll-body" style="max-height: 230px; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
                                    <table class="table-hover" id="selected-emails">
                                        <thead class="scroll-header" style="position: sticky; top: 0; z-index: 1;">
                                            <tr style="background-color: #F5F5F5; border-bottom: 2px solid #D3D3D3;">
                                                <th style="padding: 12px; text-align: center; border-right: 1px solid #E0E0E0;">Attribute</th>
                                                <th style="padding: 12px; text-align: center; border-right: 1px solid #E0E0E0;">Display Name</th>
                                                <th style="padding: 12px; text-align: center;">Data Type</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.attributes)
                                            {
                                                <tr style="border-bottom: 1px solid #E0E0E0;">
                                                    <td style="padding: 10px; border-right: 1px solid #E0E0E0; text-align: center;">@item.attribute</td>
                                                    <td style="padding: 10px; border-right: 1px solid #E0E0E0; text-align: center;">@item.displayName</td>
                                                    <td style="padding: 10px; text-align: center;">
                                                        @{
                                                            string dataTypeName = item.dataType switch
                                                            {
                                                                1 => "Binary",
                                                                2 => "Boolean",
                                                                3 => "Integer",
                                                                4 => "String",
                                                                8 => "DateTime",
                                                                _ => "Unknown"
                                                            };
                                                            @dataTypeName
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="padding-right: 10px; margin-top:20px !important;">
                        
                            <div style="float: left;margin-top: 3px;padding-left: 22px;">
                                <b>NOTE: </b>(*) Mark fields are mandatory.
                            </div>
                        <div class="d-flex justify-content-end" style="gap:10px;">
                            @if (@Model.status == "APPROVAL REQUIRED")
                            {
                                <a type="button" class="btn btn-primary uaeid-primary" id="approveButton">
                                    Approve
                                </a>
                                <a id="rejectButton" class="btn btn-other">
                                    Reject
                                </a>
                            }
                            @if (@Model.status == "REJECTED")
                            {
                                <a id="remarks" class="btn btn-other" data-toggle="modal" data-target="#remarksModal">
                                    Remarks
                                </a>
                            }
                            <a asp-action="List" class="btn btn-other">
                                Cancel
                            </a>

                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@* approve modal *@
<div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-labelledby="approveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="approveModalLabel">Approve</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <p class="mb-0">Do you want to proceed?</p>

            </div>
            <div class="modal-footer">
                <button type="button" id="approveButton" class="btn btn-primary uaeid-primary" style="padding: 6px 15px; border-radius: 6px; font-weight: 600;">
                    Approve
                </button>
                <button type="button" class="btn btn-other" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@* reject modal *@
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="border-radius:12px;">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="rejectModalLabel">Reject Credential</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="rejectForm">
                    <div class="form-group">
                        <label for="rejectRemarks" style="font-weight: 500;">Remarks</label>
                        <textarea id="rejectRemarks" class="form-control" rows="4" required placeholder="Enter your remarks here..."></textarea>
                    </div>
                    <div class="mt-3 text-right">
                        <button type="submit" class="btn btn-primary uaeid-primary" style="padding: 6px 15px; border-radius: 6px; font-weight: 600;">Submit</button>
                        <button type="button" class="btn btn-other d-flex flex-column justify-content-center" data-dismiss="modal" style="padding: 6px 15px; border-radius: 6px;float:right;margin-left:10px;">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* remarks modal *@

<div class="modal fade" id="remarksModal" tabindex="-1" role="dialog" aria-labelledby="remarksModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="remarksModalLabel">View Remarks</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(Model.remarks))
                {
                    <p class="mb-2" class="text-left">@Model.remarks</p>
                }
                else
                {
                    <p class="mb-0">No remarks available.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-other" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        $("#Wallet-Manager > a")
            .attr("aria-expanded", "true")
            .addClass("active");

        $("#Wallet-Manager")
            .addClass("submenu-active show");

        $("#Wallet-Manager .submenu")
            .addClass("show");

        $('#Wallet-Subscriptions').addClass('active');

        $('#networkOverlay').hide();
        document.getElementById("navigationNetworkOverlay").style.display = "none";


        $('#homeMenu').addClass('breadcrumb-item').append('Wallet > Wallet Subscribed Requests');
        $('#mainMenu').removeClass('breadcrumb-item');
        $('#subMenu').removeClass('breadcrumb-item');
         var table = $("#VerifierTable").DataTable({
            "destroy": true,
            "bLengthChange": false,
            "searching": false,
            "sorting": false,
             "paging": false,
            "info": false
        });
        var table1 = $("#AttributeTable").DataTable({
            "destroy": true,
            "bLengthChange": false,
            "searching": false,
            "sorting": false,
            "paging": false,
            "info": false
        });
    });

          $("#approveButton").click(function () {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You want to approve this request!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, approve it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var id = '@Model.id';

                        $.ajax({
                            url: '@Url.Action("Approve", "WalletVerificationSubscriptionRequest")',
                            type: "POST",
                            data: { id: id },
                            success: function (response) {
                                Swal.fire(
                                    'Approved!',
                                    'The request has been approved.',
                                    'success'
                                ).then(() => {
                                    window.location.href = '@Url.Action("List", "WalletVerificationSubscriptionRequest")';
                                });
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'There was an error approving the request.',
                                    'error'
                                ).then(() => {
                                    window.location.href = '@Url.Action("List", "WalletVerificationSubscriptionRequest")';
                                });
                            }
                        });
                    }
                });
            });


            // Handle Reject button click
            $('#rejectButton').click(function () {
                $('#rejectModal').modal('show');
            });

            // Handle Reject form submission inside the modal
            $('#rejectForm').submit(function (e) {
                e.preventDefault(); // Prevent default form submission

                var Id = '@Model.id';
                var remarks = $('#rejectRemarks').val();

                $.ajax({
                    url: '@Url.Action("Reject", "WalletVerificationSubscriptionRequest")',
                    type: 'POST',
                    data: { id: Id, remarks: remarks },
                    success: function (response) {
                        $('#rejectModal').modal('hide');
                        window.location.href = '@Url.Action("List", "WalletVerificationSubscriptionRequest")';
                    },
                    error: function (xhr) {
                        window.location.href = '@Url.Action("List", "WalletVerificationSubscriptionRequest")';
                    }
                });
            });

</script>
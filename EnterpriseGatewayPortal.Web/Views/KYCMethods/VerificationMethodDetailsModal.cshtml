<!-- View Method Modal -->
<div class="modal fade" id="viewMethodModal" tabindex="-1" role="dialog" aria-labelledby="viewMethodLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content overflow-hidden rounded-lg border-0 shadow-lg">
            <!-- Header -->
            <div class="modal-header bg-gradient-primary py-2 text-white">
                <div class="d-flex align-items-center">
                    <div>
                        <h5 class="modal-title fw-bold modal-heading mb-0" id="viewMethodLabel">
                            Verification Method Details
                        </h5>
                    </div>
                </div>
                <button type="button" class="close-btn" data-dismiss="modal" aria-label="Close">
                    <i class="ph ph-x"></i>
                </button>
            </div>

            <!-- Body -->
            <div class="modal-body px-4 py-2">
                <div class="d-flex flex-column">
                    <div class="d-flex flex-row gap-3">
                        <div class="flex-1">
                            <div class="info-item">
                                <label class="info-label">Method UID</label>
                                @*<div id="method-uid" class="info-value font-monospace text-truncate"></div>*@
                                <input id="method-uid" readonly class="method-input" />
                            </div>
                        </div>
                        <div class="flex-1">
                            <div class="info-item">
                                <label class="info-label">Method Name</label>
                                @*<div id="method-name" class="info-value fw-semibold"></div>*@
                                <input id="method-name" class="method-input" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row gap-3">
                        <div class="flex-1">
                            <div class="info-item">
                                <label class="info-label">Method Type</label>
                                @*<div id="method-type" class="info-value"></div>*@
                                <input id="method-type" class="method-input" readonly />
                            </div>
                        </div>
                        <div class="flex-1">
                            <div class="info-item">
                                <label class="info-label">Status</label>
                                <span id="method-status" class="status-badge badge bg-success"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Configuration Section -->
                <div class="d-flex justify-content-between mt-2 flex-row gap-2">
                    <div class="flex">
                        <div class="info-item">
                            <label class="info-label">Pricing Per Verification (AED)</label>
                            @*<div id="method-pricing" class="info-value text-success fw-bold"></div>*@
                            <input id="method-pricing" readonly class="method-input" />
                        </div>
                    </div>
                    <div class="flex">
                        <div class="info-item">
                            <label class="info-label">Processing Time (SLA)</label>
                            @*<div id="method-processingtime" class="info-value"></div>*@
                            <input id="method-processingtime" readonly class="method-input" />
                        </div>
                    </div>
                    <div class="flex">
                        <div class="info-item">
                            <label class="info-label">Confidence Threshold</label>
                            @*<div id="method-confidence" class="info-value">
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <small class="text-muted" id="confidence-value"></small>
                                </div>*@
                            <input id="method-confidence" readonly class="method-input" />
                        </div>
                    </div>
                </div>

                <!-- Segments & Attributes Section -->
                <div class="row" style="gap:15px;">
                    <div class="w-100">
                        <div class="info-item">
                            <label class="info-label">Target Segments</label>
                            <div id="method-targetsegments" class="tags-container"></div>
                        </div>
                    </div>
                    <div class="w-100">
                        <div class="info-item">
                            <label class="info-label">Mandatory Attributes</label>
                            <div id="method-mandatory" class="tags-container"></div>
                        </div>
                    </div>
                    <div class="w-100">
                        <div class="info-item">
                            <label class="info-label">Optional Attributes</label>
                            <div id="method-optional" class="tags-container"></div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="w-100">
                    <label class="info-label">Description</label>
                    @*<div id="method-description" class="info-value text-muted bg-light rounded p-3"></div>*@
                    <textarea id="method-description" readonly class="method-input" style="max-height:50px;"></textarea>
                </div>

                <!-- Request Status -->
                @*<div class="section-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <label class="info-label mb-1">Request Status</label>
                                <span id="method-requeststatus" class="status-badge status-active badge bg-primary"></span>
                            </div>
                            <div class="text-muted small">
                                <i class="bi bi-clock me-1"></i> Last updated: <span id="last-updated">Just now</span>
                            </div>
                        </div>
                    </div>*@
            </div>

            <!-- Footer -->
            <div class="modal-footer border-top bg-light px-4 py-3">
                <button id="method-status-btn">
                    View Status
                </button>
                <button id="method-send-request-btn">
                    Send Request
                </button>
                <button type="button" class="button-close" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>


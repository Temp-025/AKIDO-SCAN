@model EnterpriseGatewayPortal.Web.ViewModel.DocumentVerification.DocumentVerifyDetailsViewModel
@using EnterpriseGatewayPortal.Core.Constants;

@{
    ViewData["Title"] = "Document Verification Details";
}

@{
    await Html.RenderPartialAsync("_AlertBox");
}
<style>
    #documentVerificationDetailsLegend {
        width: 30%;
        font-size: 1.2rem;
    }

    .classshide {
        display: none !important;
    }
</style>
<div class="classshide">
    <div id='viewer'></div>
</div>
<div class="row" id="spacingCss">
    <div class="col-md-12">
        <div class="card-custom">
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="form-group">
                                <label asp-for="IssuerOrgName" class="col-form-label"></label>
                                <input asp-for="IssuerOrgName" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="IssuerOrgName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DocumentType" class="col-form-label"></label>
                                <input asp-for="DocumentType" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="DocumentType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VerificationType" class="col-form-label"></label>
                                <input asp-for="VerificationType" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="VerificationType" class="text-danger"></span>
                            </div>
                           
                           
                           @* <div class="form-group">
                                <label asp-for="CreatedAt" class="col-form-label"></label>
                                <input asp-for="CreatedAt" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="CreatedAt" class="text-danger"></span>
                            </div>*@
                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-group">
                                <label asp-for="VerifiedBy" class="col-form-label"></label>
                                <input asp-for="VerifiedBy" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="VerifiedBy" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RequestedBy" class="col-form-label"></label>
                                <input asp-for="RequestedBy" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="RequestedBy" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="col-form-label"></label>
                                <input asp-for="Status" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                           @* <div class="form-group">
                                <label asp-for="CompletedAt" class="col-form-label"></label>
                                <input asp-for="CompletedAt" class="form-control" class="form-control" readonly />
                                <span asp-validation-for="CompletedAt" class="text-danger"></span>
                            </div>*@
                           
                        </div>
                    </div>
                  
                       
                        <div class="d-flex justify-content-end" style="padding-top: 31px;">
                            <div class="d-flex justify-content-end " style="padding-top: 31px;">
                            @if (Model.Status == "Completed" && Model.VerificationType == "Technical")
                            {
                                <a class="btn btn-primary" type="button" asp-action="DownloadReport" asp-route-fileId="@Model.FileId">
                                    <i class="icon-pencil"></i>DownLoad Technical Report
                                </a>
                            }
                            @if (Model.Status == "Completed" && Model.VerificationType == "TrueCopy")
                            {

                                <a class="btn btn-primary" type="button" asp-action="DownloadCertificatesForTrueCopy" asp-route-fileId="@Model.FileId">
                                    <i class="icon-pencil"></i>DownLoad TrueCopy File
                                </a>
                            }
                            @if (Model.Status == "Completed" && Model.VerificationType == VerificationTypeConstants.Qr)
                            {
                                <a class="btn btn-primary" type="button" asp-action="DownloadReport" asp-route-fileId="@Model.FileId">
                                    <i class="icon-pencil"></i>DownLoad QRCode Report
                                </a>
                            }
                                &nbsp;&nbsp;
                             <a type="button" asp-action="Index" class="btn btn-danger">
                                Cancel
                            </a>
                        </div>
                   
                    <div style="display:none;">
                        <input asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>

        $(document).ready(function () {
            var DocumentVerificationLink = document.getElementById('DocumentVerificationModle').querySelector('.nav-link');
            DocumentVerificationLink.click();
            $('#homeMenu').addClass('breadcrumb-item').append('Document Verification > Document Request Details');
            $('#mainMenu').removeClass('breadcrumb-item');
            $('#subMenu').removeClass('breadcrumb-item');
            $('#VerificationMenu').addClass('active');
            $('#networkOverlay').hide();
        });

    </script>
}

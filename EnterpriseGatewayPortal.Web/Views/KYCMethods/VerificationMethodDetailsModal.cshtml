<script>
    $('#method-status-btn').on('click', function () {
        const methodUid = $('#method-uid').val();
        const targetUrl = '@Url.Action("VerificationMethodStatus", "KYCMethods")' + '?methodUid=' + encodeURIComponent(methodUid);
        window.location.href = targetUrl;
    });

    $('#method-send-request-btn').on('click', function () {
        const methodUid = $('#method-uid').val();

        sendRequest(methodUid);

        $('#viewMethodModal').modal('hide');

    });

</script>
<script>

    var ackId = '@Model.id';

    $(document).ready(function () {
        $('#networkOverlay').hide();
       
        checkStatus(); 
        setInterval(checkStatus, 10000);
    });

    function checkStatus(){

        $.ajax({
            url: '@Url.Action("CheckPaymentStatus", "PaymentHistory")',
            type: 'GET',
            data: { id: ackId },
            //beforeSend: function () {
            //    $('#overlay').show();
            //},
            //complete: function () {

            //    $('#overlay').hide();
            //},
            success: function (response) {

                if (response.success) {
                    
                    if (response.statusInfo == "Success"){
                        $("#InitiatedId").css("display", "none");
                        $("#SuccessId").css("display", "block");                    
                        showSuccess();

                    } else if (response.statusInfo == "Failed") {

                        $("#InitiatedId").css("display", "none");
                        $("#FailedId").css("display", "block");
                        showFailed();
                    }
                } else {

                    $("#InitiatedId").css("display", "none");
                    $("#FailedId").css("display", "block");
                    showFailed();
                    console.error(response.message);
                }
            },
            error: function (error) {
                console.error('Error:', error.statusText);
            }
        });

    }

    function showSuccess() {
        var successId = document.getElementById('SuccessId');
        successId.style.display = 'block';

        var loaderContainer = document.querySelector('.loader-container3');

        setTimeout(function () {
            loaderContainer.classList.add('show-checkmark');

            setTimeout(function () {
                var loader = document.querySelector('.loader3');
                loader.style.borderColor = '#4caf50';
                loader.style.borderTopColor = '#4caf50';
            }, 500); // 500ms is the duration of the fadeOut animation
        }, 1000); // 1000ms is the duration of the spin animation
    }

    function showFailed() {
        var successId = document.getElementById('FailedId'); 
        successId.style.display = 'block';

        var loaderContainer = document.querySelector('.loader-container4');

        setTimeout(function () {
            loaderContainer.classList.add('show-cross');

            setTimeout(function () {
                var loader = document.querySelector('.loader4');
                loader.style.borderColor = '#dc3545';
                loader.style.borderTopColor = '#dc3545';
            }, 500); // 500ms is the duration of the fadeOut animation
        }, 1000); // 1000ms is the duration of the spin animation
    }

</script>
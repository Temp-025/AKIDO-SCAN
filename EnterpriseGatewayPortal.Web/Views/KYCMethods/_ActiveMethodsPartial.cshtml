@model EnterpriseGatewayPortal.Web.ViewModel.KYCMethods.ActiveMethodsViewModel

<style>
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 6px !important;
        font-weight: 600;
        font-size: 14px;
        width: fit-content;
    }

    .badge-approved {
        background: #e8f7ef;
        color: #107c41;
    }

    .badge-default {
        background: #e7f0ff;
        color: #004aad;
    }
</style>

@if (Model.ActiveMethods != null && Model.ActiveMethods.Any())
{
    <div class="methods-list">

        @foreach (var method in Model.ActiveMethods)
        {
            var isDefault = method.RequestStatus?.ToLower() == "na";
            var isApproved = method.RequestStatus?.ToLower() == "approved";
            var cardClass = isDefault ? "kyc-card default-method" : "kyc-card";

            <div class="@cardClass"
                 data-name="@method.MethodName.ToLower()"
                 data-requeststatus="@method.RequestStatus?.ToLower()">

                <!-- Header -->
                <div class="kyc-header d-flex justify-content-between align-items-center">
                    <div class="kyc-title">@method.MethodName</div>

                    <button type="button"
                            class="btn btn-primary uaeid-primary view-details-btn"
                            data-methoduid="@method.MethodUid"
                            data-methodname="@method.MethodName"
                            data-pricing="@method.Pricing"
                            data-status="@method.Status"
                            data-description="@method.Description"
                            data-methodtype="@method.MethodType"
                            data-processingtime="@method.ProcessingTime"
                            data-confidencethreshold="@method.ConfidenceThreshold"
                            data-requeststatus="@method.RequestStatus"
                            data-isrequested="@method.IsRequested.ToString()"
                            data-targetsegments='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(method.TargetSegments ?? new List<string>()))'
                            data-mandatory='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(method.MandatoryAttributes ?? new List<string>()))'
                            data-optional='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(method.OptionalAttributes ?? new List<string>()))'>
                        View Details
                    </button>
                </div>

                <div class="kyc-method-type">@method.MethodType</div>
                <hr />

                <!-- Pricing -->
                <div>
                    <span>Price per Verification (AED):</span>
                    <span style="font-weight:600;">@method.Pricing</span>
                </div>

                <!-- Unified Status area -->
                <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap">

                    <!-- Badge -->
                    <div class="status-badge @(isApproved ? "badge-approved" : "badge-default")">
                        <i class="ph @(isApproved ? "ph-check-circle" : "ph-info")" style="font-size:16px;"></i>
                        <span class="" style="font-size:14px;">@(isApproved ? "Approved" : "Default Method")</span>
                    </div>

                    <!-- Date shown only for Approved -->
                    @if (isApproved)
                    {
                        <div class="d-flex flex-row" style="gap:10px;">
                            <span style="font-weight:500;color:black;">Approved On:</span>
                            <span style="font-weight:400;color:black;">
                                @(
                                    DateTime.TryParse(method.ModifiedDate, out var dtt)
                                        ? dtt.ToString("d MMMM yyyy")
                                        : "-"
                                )
                            </span>
                        </div>
                    }
                </div>

            </div>
        }
    </div>
}
else
{
    <div class="no-results">No active methods found.</div>
}

<div class="classshide">
    <div id='viewer'></div>
</div>
<label class="sub-label">View Verify Credential Details</label>
<div class="row" id="spacingCss">

    <div class="col-md-12 plr">
        <div class="card-custom">
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="CreateData">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="form-group col-md-6" style="float:left;">
                                <input asp-for="id" class="form-control" hidden />

                                <div class="form-group">
                                    <label asp-for="credentialName" class="col-form-label s3">Credential Name</label>
                                    <input asp-for="credentialName" class="form-control" readonly />

                                    <span asp-validation-for="credentialName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="organizationName" class="col-form-label s3">Organization Name</label>
                                    <input asp-for="organizationName" class="form-control" rows="1" readonly />
                                    <span asp-validation-for="organizationName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="status" class="col-form-label s3">Status</label>
                                    <input asp-for="status" class="form-control" rows="1" readonly />
                                    <span asp-validation-for="status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="createdDate" class="col-form-label s3">CreatedDate</label>
                                    <input asp-for="createdDate" class="form-control" readonly />
                                    <span asp-validation-for="createdDate" class="text-danger"></span>
                                </div>


                            </div>
                            <div class="form-group col-md-6" style="float:left;">
                                 <label asp-for="attributes" class="col-form-label s3">Selected Verifier Emails</label>
                                    <div class="scroll-wrapper">
                                    <!-- Fixed Heading -->
                                        <div class="scroll-header">
                                             Emails
                                        </div>
 
                                    <!-- Scrollable Table -->
                                    <div class="scroll-body">
                                        <table class="table-hover" id="selected-emails">
                                            <tbody>
                                                @foreach (var email in Model.emails)
                                                {
                                                    <tr>
                                                        <td>@email</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                              
                                    </div>
                            </div>

                        </div>


                        <div class="form-group col-md-12">
                            <label asp-for="attributes" class="col-form-label s3" style="margin-left: 15px;">Attributes</label>
                            <div class="scroll-wrapper" style="margin-left: 15px;height:222px;">

                                <!-- Scrollable Table -->
                                <div class="scroll-body" style="max-height: 230px; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
                                    <table class="table-hover" id="selected-emails">
                                        <thead class="scroll-header" style="position: sticky; top: 0; z-index: 1;">
                                            <tr style="background-color: #F5F5F5; border-bottom: 2px solid #D3D3D3;">
                                                <th style="padding: 12px; text-align: center; border-right: 1px solid #E0E0E0;">Attribute</th>
                                                <th style="padding: 12px; text-align: center; border-right: 1px solid #E0E0E0;">Display Name</th>
                                                <th style="padding: 12px; text-align: center;">Data Type</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.attributes)
                                            {
                                                <tr style="border-bottom: 1px solid #E0E0E0;">
                                                    <td style="padding: 10px; border-right: 1px solid #E0E0E0; text-align: center;">@item.attribute</td>
                                                    <td style="padding: 10px; border-right: 1px solid #E0E0E0; text-align: center;">@item.displayName</td>
                                                    <td style="padding: 10px; text-align: center;">
                                                        @{
                                                            string dataTypeName = item.dataType switch
                                                            {
                                                                1 => "Binary",
                                                                2 => "Boolean",
                                                                3 => "Integer",
                                                                4 => "String",
                                                                8 => "DateTime",
                                                                _ => "Unknown"
                                                            };
                                                            @dataTypeName
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <style>
                            /* Hide scrollbar but allow scrolling */
                            .scroll-body::-webkit-scrollbar {
                                display: none; /* Chrome, Safari, Edge */
                            }
                        </style>





                    </div>
                    <div style="padding-right: 10px">
                       
                            <div style="float: left;margin-top: 30px;padding-left: 22px;">
                                <b>NOTE: </b>(*) Mark fields are mandatory.
                            </div>
                        <div class="d-flex justify-content-end">
                           @*  <button type="button" class="btn btn-primary" id="showConfigBtn">View Configuration</button> *@
                            &nbsp;&nbsp;
                            <a asp-action="List" class="btn btn-other" style="margin-top: 19px;">
                                Cancel
                            </a>

                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

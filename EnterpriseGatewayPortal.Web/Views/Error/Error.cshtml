@{
    Layout = null;
}
@{
    var userRoleName = User.FindFirst("userRoleName")?.Value;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/assets/appcss/ErrorPage.css" asp-append-version="true" />
    <title>Error</title>
    <link rel="icon" type="image/x-icon" href="~/assets/fav04.png" />
    <!-- stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet"
          type="text/css" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" integrity="sha512-fRVSQp1g2M/EqDBL+UFSams+aw2qk12Pl/REApotuUVK1qEXERk3nrCFChouag/PdDsPk387HJuetJ1HBx8qAg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <h1 class="text-danger" style="display:none">
    </h1>
    <h5 class="text-danger" style="display:none"></h5>

    <section class="myform-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="form-area" id="errorPage" style="text-align:center;">
                        <img src="@Url.Content("~/assets/images/WarningCircle.svg")" alt="Warning" />

                        <p class="error">
                            An error occurred
                        </p>
                        <p class="error_desc">
                            We couldn’t complete your request,<br>
                            Please try again later.
                        </p>

                        @if (userRoleName == "KYCADMIN")
                        {

                            <div class="myform-button" style="margin-top: 30px">
                                <div class="d-flex justify-content-center">
                                    <a class="myform-btn" asp-controller="KYCDashboard" asp-action="Index">Go to Dashboard</a>

                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="myform-button" style="margin-top: 30px">
                                <div class="d-flex justify-content-center">
                                    <a class="myform-btn" asp-controller="Dashboard" asp-action="Index">Go to Dashboard</a>

                                </div>
                            </div>


                        }
                    </div>
                    <div class="row footer">

                        @*<img id="logo" src="~/assets/NewLogo/SVG/NitaLogo.svg" />*@

                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
</html>

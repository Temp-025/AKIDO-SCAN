@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <noscript>Please enable java script in your browser.</noscript>
    <title>Enterprise Gateway</title>
   @* <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />*@
    <link rel="icon" type="image/x-icon" href="~/assets/UAEIDfavicon.png" />
@*     <link rel="icon" type="image/x-icon" href="~/assets/images/MyTrustNewPNG.png" asp-append-version="true" />
 *@
    <link href="~/assets/css/bootstrap.min.css"
          rel="stylesheet"
          type="text/css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/appcss/ErrorPage.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet"
          type="text/css" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" integrity="sha512-fRVSQp1g2M/EqDBL+UFSams+aw2qk12Pl/REApotuUVK1qEXERk3nrCFChouag/PdDsPk387HJuetJ1HBx8qAg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <section class="myform-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="form-area" id="errorPage" style="text-align:center;">
                        <img src="@Url.Content("~/assets/images/WarningCircle.svg")" alt="Warning" />

                        @if (ViewBag.error != null)
                        {
                            <p class="error">
                                @ViewBag.error
                            </p>
                        }
                        @if (ViewBag.error_description != null)
                        {
                            <p class="error_desc">
                                @ViewBag.error_description
                            </p>
                        }
                        <div class="myform-button" style="margin-top: 30px">
                            <div class="d-flex justify-content-center">
                                <a class="myform-btn" asp-controller="Login" asp-action="Index">Go to Login Page</a>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
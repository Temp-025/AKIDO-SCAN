<script src="~/assets/js/jquery-ui.js"></script>
<script>
    var isSessionExpired = @((ViewBag.SessionExpired ?? false).ToString().ToLower());
    var isUserNotFound = @((ViewBag.logout ?? false).ToString().ToLower());
    var isDeviceExist = @((ViewBag.DeviceExist ?? false).ToString().ToLower());
    var isLicenceInvalid = @((ViewBag.Licenceinvalid ?? false).ToString().ToLower());
    var isLicenceNotActivated = @((ViewBag.LicenceNotActivated ?? false).ToString().ToLower());
    var isLicenceExpired = @((ViewBag.LicenceExpired ?? false).ToString().ToLower());

    if (isLicenceInvalid) {
        Swal.fire({
            title: "Info",
            text: "Your licence is not valid",
            icon: 'info',
            showConfirmButton: false,
            allowOutsideClick: false,
        });
    }

    if (isLicenceNotActivated) {
        Swal.fire({
            icon: 'info',
            title: "Info",
            text: "License not Activated",
            confirmButtonText: "Activate License",
            allowOutsideClick: false,
            showCancelButton: false,
        }).then((result) => {
            if (result.isConfirmed) {
                ActivateLicence();
            }
        });
    }

    if (isLicenceExpired) {
        Swal.fire({
            title: "Info",
            text: "Your licence is expired please renew",
            icon: 'info',
            confirmButtonText: 'OK'
        });
    }

    if (isSessionExpired) {
        Swal.fire({
            title: "Info",
            text: "Your session has expired. Please log in again.",
            icon: 'info',
            confirmButtonText: 'OK'
        });
    }
    if (isUserNotFound) {
        Swal.fire({
            title: "Info",
            text: "You did not have access for this portal",
            icon: 'info',
            confirmButtonText: 'OK'
        });
    }
    if (isDeviceExist) {
        Swal.fire({
            title: "Info",
            text: "Your device is not Registered",
            icon: 'info',
            showConfirmButton: false,
            allowOutsideClick: false,
        });
    }
    function authenticate() {
        var loginUrl = '@Url.Action("Index1", "Login")';
        var formName = "Loginform"
        var form = new FormData(document.getElementById(formName));
        if (form.get("email") === "" || form.get("password") === "") {
            Swal.fire({
                title: "Info",
                text: "Email or Password Should Not be Empty",
                icon: 'info',
                confirmButtonText: 'OK',
                customClass: {
                    popup: 'custom-swal-popup',
                    title: 'custom-swal-title',
                    htmlContainer: 'custom-swal-content',
                    confirmButton: 'custom-swal-confirm-btn'
                }
            });
            return;
        } else {
            document.getElementById("overlay").style.display = "block";
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CheckPassword", "Login")',
                dataType: 'json',
                data: {
                    Email: form.get("email"),
                    Password: form.get("password")
                },
                success: function (result) {
                    document.getElementById("overlay").style.display = "none";
                    if (result.success) {
                        var loginform = document.getElementById("Loginform");
                        document.getElementById("Loginform").action = loginUrl;
                        loginform.submit();
                    }
                    else {
                        Swal.fire({
                            title: "Info",
                            text: result.message,
                            icon: 'info',
                            confirmButtonText: 'OK'
                        });

                        return;
                    }
                },
                error: function (xhr, status, error) {
                    document.getElementById("overlay").style.display = "none";
                    Swal.fire({
                        title: "Error",
                        text: "Something went wrong",
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                    console.error(xhr, status, error);
                }

            })
        }

    }
    $("#password").keypress(function (event) {
        if (event.which === 13) { // 13 is the key code for Enter
            authenticate();
        }
    });
    function ActivateLicence() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ActivateLicence", "Login")',
            dataType: "json",
            beforeSend: function () {
                $('#overlay').show();
            },
            complete: function () {
                $('#overlay').hide();
            },
            success: function (response) {
                if (response.status === "Success") {
                    Swal.fire({ icon: 'success', title: "Info", text: response.message });
                } else if (response.status === "Failed") {
                    Swal.fire({
                        icon: 'info',
                        title: "Activation Failed",
                        text: response.message,
                        showCancelButton: false,
                        allowOutsideClick: false,
                        confirmButtonText: "Retry"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            ActivateLicence();
                        }
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: "Activation Failed",
                    text: "An error occurred while activating the license.",
                    showCancelButton: false,
                    allowOutsideClick: false,
                    confirmButtonText: "Retry"
                }).then((result) => {
                    if (result.isConfirmed) {
                        ActivateLicence();
                    }
                });
            }
        });
    }

    $(document).ready(function () {
        document.cookie = "NavigationLayout=; path=/;";
        document.cookie = "HeaderNavigationLayout=Vertical; path=/;";
    });

</script>
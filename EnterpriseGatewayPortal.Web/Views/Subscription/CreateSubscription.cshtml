<script src="~/assets/js/jquery-3.6.4.min.js"></script>
<script>

    var issuerOrgNamesDetails = @Html.Raw(JsonConvert.SerializeObject(Model.IssuerOrgNameDetails));
    var tableBody;
    var responseMsg;
    var certValues = [];
    var selectedDocuments = [];
    var selectedDocumentsString;

    $(document).ready(function () {
        var DocumentVerificationLink = document.getElementById('DocumentVerificationModle').querySelector('.nav-link');
        DocumentVerificationLink.click();
        $('#homeMenu').addClass('breadcrumb-item').append('Subscription > New Subscription');
        $('#mainMenu').removeClass('breadcrumb-item');
        $('#subMenu').removeClass('breadcrumb-item');
        $('#SubscriptionMenu').addClass('active');
        $('#networkOverlay').hide();
        $('#docDataTable').DataTable({
            paging: true,

        });
        updateIssuerNames();

    });

    $('#issuerNameDropdown').change(function () {

        sendIssuerUidToController();
    });


    function updateDocumentTypes(documentTypes) {


        if (!tableBody) {
            tableBody = document.getElementById("docDataTable").getElementsByTagName('tbody')[0];
        }
        tableBody.innerHTML = "";
        documentTypes.forEach(function (documentType) {
            addTableRow(documentType.documentProperty);
        });
    }

    function addTableRow(documentName) {
        var newRow = tableBody.insertRow(tableBody.rows.length);
        var cell1 = newRow.insertCell(0);
        var cell2 = newRow.insertCell(1);
        cell1.innerHTML = documentName;
        cell2.innerHTML = '<input type="checkbox" class="custom-check-box">';
    }


    function updateIssuerNames() {

        var uniqueIssuerNames = [...new Set(issuerOrgNamesDetails.map(item => item.documentProperty))];
        var issuerNameDropdown = $('#issuerNameDropdown');

        issuerNameDropdown.empty();
        issuerNameDropdown.append($('<option></option>').attr('value', '').text('Choose an option'));

        $.each(uniqueIssuerNames, function (index, issuerName) {
            issuerNameDropdown.append($('<option></option>').attr('value', issuerName).text(issuerName));
        });
    }




    function sendIssuerUidToController() {

       var selectedIssuerName = $('#issuerNameDropdown').val();
      if (selectedIssuerName && selectedIssuerName !== "") {

        var selectedIssuer = issuerOrgNamesDetails.find(item => item.documentProperty === selectedIssuerName);

        if (selectedIssuer) {
            var selectedIssuerUid = selectedIssuer.IssuerUid;

            if (selectedIssuerUid) {
                $('#documentCheckboxes').show();
            } else {
                $('#documentCheckboxes').hide();
            }

                $.ajax({
                    url: '@Url.Action("CheckRecord", "Subscription")',
                    type: 'POST',
                    data: { issuerUid: selectedIssuerUid },
                    beforeSend: function () {
                        $('#overlay').show();
                    },
                    complete: function () {

                        $('#overlay').hide();
                    },
                    success: function (response) {

                        if (response.success) {
                            Swal.fire({
                                title: 'Already Exists!',
                                text: response.message,
                                icon: 'info' 
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    //window.location.href = '@Url.Action("EditSubscription", "Subscription")';
                                    window.location.href = '@Url.Action("EditSubscription", "Subscription")?issuerUid=' + selectedIssuerUid;
                                    console.log(response.message);
                                }
                            });


                            console.log(response.message);
                        } else {
                            $.ajax({
                                url: '@Url.Action("GetDocumentType", "Subscription")',
                                type: 'POST',
                                data: { issuerUid: selectedIssuerUid },
                                success: function (response) {

                                    if (response.success) {

                                        updateDocumentTypes(response.result);

                                        console.log(response.message);
                                    } else {

                                        console.error(response.message);
                                    }
                                },
                                error: function (error) {

                                    console.error('Error:', error.statusText);
                                }
                            });

                            console.error(response.message);
                        }
                    },
                    error: function (error) {

                        console.error('Error:', error.statusText);
                    }
                });
           }
         }
       else {
            // Hide the documentCheckboxes div if "Choose an option" is selected
            $('#documentCheckboxes').hide();
       }
    }


    function validateFields() {

        if ($("#issuerNameDropdown").val() === "") {

            Swal.fire({
                icon: 'error',
                title: 'Organization Empty!',
                text: 'Please Select Issuer Organization.'

            });

            return false;
        }
        if ($('.custom-check-box:checked').length === 0) {
            Swal.fire({
                icon: 'error',
                title: 'Document Empty!',
                text: 'Please select any Document.'

            });

            return false;
        }

        return true;
    }

    function SaveSubscription(event) {

        event.preventDefault();
        for (var i = 0; i < tableBody.rows.length; i++) {

            var checkbox = tableBody.rows[i].cells[1].querySelector('.custom-check-box');

            if (checkbox.checked) {
                var documentName = tableBody.rows[i].cells[0].innerHTML;

                if (selectedDocuments.indexOf(documentName) === -1) {
                    // If not, add it to the selectedDocuments array
                    selectedDocuments.push(documentName);
                }
            }
        }
        selectedDocumentsString = selectedDocuments.join(',');
       // updateSelectedDocumentsArray();
        var selectedIssuerName = $('#issuerNameDropdown').val();
        var selectedIssuer = issuerOrgNamesDetails.find(item => item.documentProperty === selectedIssuerName);
        var selectedIssuerUid = selectedIssuer.IssuerUid;

        if (validateFields()) {

            var swalText = 'Do you want to Subscribe?\n';
            //if (typeof certValues === 'object') {
            //    for (var key in certValues) {
            //        if (certValues.hasOwnProperty(key)) {
            //            var value = certValues[key];
            //            swalText += `${key}: ${value}rs\n`;
            //        }
            //    }
            //}
            Swal.fire({
                title: 'Subscription',
                text: swalText,
                icon: 'info', // 'type' is replaced with 'icon'
                showCancelButton: true,
                confirmButtonText: 'Confirm'

            }).then((result) => {
                if (result.isConfirmed) {
                    console.log("hi");
                    var issuerName = $('#issuerNameDropdown').val();

                    var createSubscriptionViewModel = {
                        issuerName: selectedIssuerName,
                        issuerUid: selectedIssuerUid,
                        selectedDocuments: selectedDocumentsString,
                        IssuerOrgNameDetails: issuerOrgNamesDetails,
                    }

                    $.ajax({
                        url: '@Url.Action("Save", "Subscription")',
                        type: 'POST',
                        data: JSON.stringify(createSubscriptionViewModel),
                        contentType: 'application/json; charset=utf-8',
                        processData: false,
                        //data: {
                        //    issuerName: issuerName,
                        //    issuerUid: selectedIssuerUid,
                        //    selectedDocuments: selectedDocumentsString,
                        //    certValues: JSON.stringify(certValues)
                        //},
                        //contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                        //processData: true,
                        beforeSend: function () {
                            $('#overlay').show();
                        },
                        complete: function () {
                            $('#overlay').hide();
                        },
                        success: function (response) {
                            if (response.success) {
                                responseMsg = response.message;
                                Swal.fire({
                                    title: 'Success!',
                                    text: responseMsg,
                                    icon: 'success' // type: 'success' => icon: 'success'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = '@Url.Action("SubscriptionList", "Subscription")';
                                    }
                                });

                                console.log(response.message);
                            } else {
                                console.error(response.message);
                            }
                        },
                        error: function (error) {
                            console.error('Error:', error.statusText);
                        }
                    });
                }
            });

        }
    }



</script>
    function modalForm(EdmsId, SignerName) {

        var intervalId = "";
        intervalId = setInterval(function () {
            if (isWebViewerLoaded) {
                clearInterval(intervalId);
            }
        }, 3000);

        $("#digitalFormModal").modal('show');
        FileName = SignerName + "_signed";
        const url = `@Url.Action("GetPreviewConfig", "DigitalForm")`;

        $.ajax({
            url: `${url}/${EdmsId}`,
            type: 'GET',
            beforeSend: function () {
                $('#overlay').show();
            },
            complete: function () {
                $('#overlay').hide();
            },
            success: function (resp) {
                if (resp.success) {
                    Documentbase64 = resp.resource;

                    webviwerInstance.UI.loadDocument(base64ToBlob(Documentbase64), { filename: FileName });
                    const { Annotations, documentViewer, PDFNet, Tools, annotationManager } = webviwerInstance.Core

                    documentViewer.addEventListener('documentLoaded', () => {

                        webviwerInstance.UI.setZoomLevel("90%");
                        const zoom = webviwerInstance.UI.getZoomLevel("90%");
                    });

                    documentViewer.addEventListener('annotationsLoaded', () => {
                        annotationManager.getAnnotationsList().forEach(annot => {
                            annot.ReadOnly = true;
                        });
                    });
                } else {
                   Swal.fire({
                      title: 'Error',
                      text: resp.message,
                      icon: 'error',
                      confirmButtonText: 'OK'
                    }).then((result) => {
                      if (result.isConfirmed) {
                        window.location.href = '@Url.Action("Index", "DigitalForm")';
                      }
                    });

                }
            },
            error: function (xhr, status, error) {
              Swal.fire({
                  title: 'Error',
                  text: 'Something went wrong!',
                  icon: 'error',
                  confirmButtonText: 'OK'
                }).then((result) => {
                  if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Index", "DigitalForm")';
                  }
                });

            }
        });
    }

